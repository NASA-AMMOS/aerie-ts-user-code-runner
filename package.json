{
  "name": "@nasa-jpl/aerie-ts-user-code-runner",
  "version": "0.5.0",
  "description": "A simple way to safely run user code written in Typescript.",
  "main": "build/UserCodeRunner.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf build && rm -rf docs",
    "doc": "typedoc",
    "prepare": "npm run build && npm run doc",
    "test": "node --experimental-vm-modules --enable-source-maps node_modules/jest/bin/jest.js",
    "watch": "tsc -p tsconfig.json --watch"
  },
  "dependencies": {
    "source-map": "^0.7.4",
    "stack-trace": "^1.0.0-pre1"
  },
  "peerDependencies": {
    "typescript": "4.x"
  },
  "devDependencies": {
    "@js-temporal/polyfill": "^0.4.3",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.2",
    "@types/stack-trace": "^0.0.30",
    "jest": "^29.2.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.17",
    "typescript": "^4"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.m?[tj]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
