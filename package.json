{
  "name": "@nasa-jpl/aerie-ts-user-code-runner",
  "version": "0.1.1",
  "description": "A simple way to safely run user code written in Typescript.",
  "main": "build/UserCodeRunner.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules --enable-source-maps node_modules/jest/bin/jest.js --watch",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.0",
    "lru-cache": "^7.7.1",
    "source-map": "^0.7.3",
    "stack-trace": "^1.0.0-pre1",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lru-cache": "^7.5.0",
    "@types/node": "^17.0.21",
    "@types/stack-trace": "^0.0.29",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "transform": {},
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
